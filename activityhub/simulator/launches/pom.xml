<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.support</groupId>
    <artifactId>support.pom</artifactId>
    <version>3.3.1-SNAPSHOT</version>
  </parent>
  <groupId>org.universAAL.runners</groupId>
  <artifactId>lddi.hw.simulator.activityhub</artifactId>
  <version>3.3.1-SNAPSHOT</version>
  <name>Runner Folder</name>
  <description>PaxRunner configuration for lddi.hw.simulator.activityhub artifact</description>
  <scm>
    <connection>${svn.base}/samples/activityhub/simulator/launches</connection>
    <developerConnection>${svn.base}/samples/activityhub/simulator/launches</developerConnection>
    <url>${svn.base.url}samples/activityhub/simulator/launches</url>
  </scm>
  <pluginRepositories>
    <pluginRepository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>ops4j.releases</id>
      <url>http://repository.ops4j.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <args>pax.configuration</args>
          <provision>
            <provision>scan-composite:file:artifact.composite</provision>
          </provision>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
