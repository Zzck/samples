<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.universAAL.remote</groupId>
		<artifactId>ri.pom</artifactId>
		<version>1.3.2-SNAPSHOT</version>
	</parent>
	<packaging>bundle</packaging>
	<groupId>org.universAAL.samples</groupId>
	<artifactId>ri.gateway.samples.home</artifactId>
	<name>AALSpace Gateway Communicator :: Home Node</name>
	<description>Home node using the AALSpace Gateway</description>

	<dependencies>
		<dependency>
			<groupId>org.universAAL.remote</groupId>
			<artifactId>ri.gateway.communicator</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
	      <groupId>org.universAAL.middleware</groupId>
	      <artifactId>mw.composite</artifactId>
	    </dependency>
		<dependency>
	      <groupId>org.universAAL.ontology</groupId>
	      <artifactId>ont.lighting</artifactId>
	      <!-- version>1.2.1-SNAPSHOT</version -->
	    </dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.ri.gateway.support.home.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<!-- Import-Package>org.osgi.service.http</Import-Package -->
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.universAAL.support</groupId>
				<artifactId>uaal-maven-plugin</artifactId>
				<configuration>
					<startArtifacts>
						<artifact>
							<groupId>org.apache.felix</groupId>
							<artifactId>org.apache.felix.upnp.basedriver</artifactId>
							<nostart>true</nostart>
							<startlevel>100</startlevel>
						</artifact>
					</startArtifacts>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>uAAL-Runtime</id>
			<dependencies>
				<dependency>
					<groupId>org.universAAL.middleware</groupId>
					<artifactId>mw.container.osgi</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>
