<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.remote</groupId>
    <artifactId>ri.pom</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    <relativePath>../ri.pom</relativePath>
  </parent>
  <groupId>org.universAAL.samples</groupId>
  <artifactId>ri.gateway.samples.android</artifactId>
  <version>2.0.1-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>universAAL Samples AALSpace Gateway Communicator :: Android Node</name>
  <description>Android node using the AALSpace Gateway</description>
  <scm>
    <connection>scm:svn:http://forge.universaal.org/svn/support/trunk/samples/smp.ri.gateway.communicator/${project.artifactId}</connection>
    <developerConnection>scm:svn:http://forge.universaal.org/svn/support/trunk/samples/smp.ri.gateway.communicator/${project.artifactId}</developerConnection>
    <url>http://forge.universaal.org/gf/project/support/scmsvn/?path=%2Ftrunk%2Fsamples/smp.ri.gateway.communicator/${project.artifactId}</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.universAAL.remote</groupId>
      <artifactId>ri.gateway.communicator</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.universAAL.ontology</groupId>
      <artifactId>ont.lighting</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>${project.name}</Bundle-Name>
            <Bundle-Activator>org.universAAL.ri.gateway.support.android.Activator</Bundle-Activator>
            <Bundle-Description>${project.description}</Bundle-Description>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.universAAL.support</groupId>
        <artifactId>uaal-maven-plugin</artifactId>
        <configuration>
          <startArtifacts>
            <artifact>
              <groupId>org.apache.felix</groupId>
              <artifactId>org.apache.felix.upnp.basedriver</artifactId>
              <nostart>true</nostart>
              <startlevel>100</startlevel>
            </artifact>
          </startArtifacts>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>uAAL-Runtime</id>
      <dependencies>
        <dependency>
          <groupId>org.universAAL.middleware</groupId>
          <artifactId>mw.container.osgi</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
