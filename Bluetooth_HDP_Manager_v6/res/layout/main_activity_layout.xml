<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background_color"
    android:gravity="center" >
    
    <ImageView
        android:id="@+id/uaalLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/imageviewContentDescriptionMainActivityLayout"
        android:src="@drawable/uaal_logo" />

    <ScrollView
        android:id="@+id/appScrollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/uaalLogoImageView"
        android:layout_centerHorizontal="true"
        android:background="@color/app_background_color"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/appLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background_color"
            android:gravity="center"
            android:orientation="vertical" >
            
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
