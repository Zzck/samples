<?xml version="1.0" encoding="UTF-8"?>
<features name="universAAL-UserInteraction" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">

	<!-- Change version of repository accordingly -->
	<repository>mvn:org.universAAL.middleware/mw.karaf.feature/2.0.0/xml/features</repository>

	<feature name="uAAL-UI" description="The UI FW based on the Middleware 2.0"
		version="${pom.version}" resolver='(obr)'>
		<!-- Load all features -->
		<feature>uAAL-UI.DM</feature>
		<feature>uAAL-UI.resource.server</feature>
		<feature>uAAL-UI.handler.web</feature>
		<feature>uAAL-UI.handler.gui.swing</feature>
		<feature>uAAL-UI.handler.gui.swing.BluesteelLAF</feature>
		<feature>uAAL-UI.handler.gui.swing.classicLAF</feature>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing" description="The UI Swing Handler."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<bundle start-level='96' start='true'>mvn:org.universAAL.ui/ui.handler.gui.swing/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing.BluesteelLAF" description="The UI Swing Handler's LAF plugin for BlueSteel look and feel."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-UI.handler.gui.swing</feature>	
		<bundle>mvn:org.ufacekit.osgi/swingx.osgi/0.9.2</bundle>
		<!-- fragments like ui.handler.gui.swing.bluesteelLAF cannot be started 
			so leaving them in resolved state is enough-->
		<bundle start='false'>mvn:org.universAAL.ui/ui.handler.gui.swing.bluesteelLAF/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing.classicLAF" description="The UI Swing Handler's LAF plugin for clasic look and feel."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-UI.handler.gui.swing</feature>	
		<bundle>wrap:mvn:org.universAAL.ui/ui.handler.gui.swing.classicLAF/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.resource.server" description="The UI Resource Server."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<!-- Dependencies of resource server? Jetty? -->
		<bundle start-level='97' start='true'>mvn:org.universAAL.ui/ui.resource.server/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.handler.web" description="The UI Web Handler."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<!-- Check Jetty dependencies! -->
		<bundle start-level='80'>mvn:org.ops4j.pax.web/pax-web-jetty-bundle/1.0.5</bundle>
		<bundle start-level='80'>mvn:org.ops4j.pax.web/pax-web-spi/1.0.5</bundle>
		<bundle start-level='80'>mvn:org.ops4j.pax.web/pax-web-api/1.0.5</bundle>
		<!-- Security -->
		<bundle start-level='92' start='true'>mvn:org.universAAL.security/security.authorizator/2.0.0</bundle>
		<!-- RI -->
		<bundle start-level='93' start='true'>mvn:org.universAAL.remote/ri.servicegateway/2.0.0</bundle>
		<bundle start-level='95' start='true'>mvn:org.universAAL.ui/ui.handler.web/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.DM" description="The UI Dialog Manager"
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<feature>uAAL-ONT.profile.ui.preferences</feature>
		<!-- More ontologies -->
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.impairment/2.0.0</bundle>
<!-- 		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.furniture/2.0.0</bundle> -->
<!-- 		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.health.measurement/2.0.0</bundle> -->
<!-- 		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.health.disease/2.0.0</bundle> -->
<!-- 		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.profile.health/2.0.0</bundle> -->
<!-- 		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.device/2.0.0</bundle> -->
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.languages/2.0.0</bundle>
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.profile.userid/2.0.0</bundle>
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.profile.ui.mainmenu/2.0.0</bundle>
		<feature>uAAL-CTXT.prof.server</feature>
		<bundle start-level='95' start='true'>mvn:org.universAAL.ui/ui.dm/2.0.0</bundle>
	</feature>
	
	<!-- These Features should be imported from their respective repositories, when available -->
		<feature name="uAAL-ONT.profile" description="The profile ont"
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<!-- Substitude the following for their features, when available -->
		<!-- Ontologies -->
		<bundle>wrap:mvn:jp.go.ipa/jgcl/1.0</bundle>
		<!-- Ontologies -->
		<!-- Platform -->
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.phWorld/2.0.0</bundle>
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.profile/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-ONT.profile.ui.preferences" description="The UI preferences ont"
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-ONT.Profile</feature>
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.profile.ui.preferences/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-CTXT.prof.server" description="The Context history entrepot + profiling server"
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-ONT.Profile</feature>
		<bundle start-level='90' start='true'>mvn:org.universAAL.ontology/ont.che/2.0.0</bundle>
		<!--Third party -->
		<bundle>mvn:org.openrdf.sesame/sesame-runtime-osgi/2.6.0</bundle>
		<!-- Context -->
		<bundle start-level='91' start='true'>mvn:org.universAAL.context/ctxt.che/2.0.0</bundle>
		<bundle start-level='91' start='true'>mvn:org.universAAL.context/ctxt.prof.server/2.0.0</bundle>
		
	</feature>
	
</features>
